<% @nugget.tags.build %>
<%= form_for(@nugget) do |nugget_form| %>
  <% if @nugget.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@nugget.errors.count, "error") %> prohibited this nugget from being saved:</h2>

      <ul>
      <% @nugget.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= nugget_form.label :question %><br />
    <%= nugget_form.text_field :question %>
  </div>
  <div class="field">
    <%= nugget_form.label :answer %><br />
    <%= nugget_form.text_field :answer %>
  </div>
  <div class="field">
    <%#= nugget_form.label :user_id %><br />
    <%= nugget_form.hidden_field :user_id %>
  </div>
  <%= render :partial => 'tags/form',
             :locals => {:form => nugget_form} %>
  <div class="actions">
    <%= nugget_form.submit %>
  </div>
<% end %>
